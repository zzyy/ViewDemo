<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:stateListAnimator="@animator/item_selector_animator"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image_item_gank"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#CCC"
            />

        <TextView
            android:id="@+id/tv_desc_item_gank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_image_item_gank"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/iv_image_item_gank"
            android:text="测试"
            android:textSize="18sp"
            android:maxLines="4"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>