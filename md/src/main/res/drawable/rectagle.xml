<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle"
    >


    <corners android:radius="3dp"/>

    <solid android:color="#d3c2c2"/>

    <stroke
        android:width="2dp"
        android:color="#000"
        />

    <!-- drawable内部固有的高度, 设置为view的背景后, 依然会按照view的背景来适应宽高 -->
    <size
        android:width="30dp"
        android:height="20dp"/>

    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"/>

</shape>